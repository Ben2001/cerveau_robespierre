<div class="col-md-10 col-md-offset-1">
	<div class="panel_custom panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Votes</h3>
		</div>
		<div id="conteneur_vote" class="panel-body">
			<table id="table_vote" class="colonne col-md-12">
				<tr>
					<th>Morceaux</th>
					<th>Compteur</th>
				</tr>
				<tr>
					<td><% if @redis.get("demarrer") == "off" %>
						<input type="text" id="hash1" class="songhashtag" size="10"/>
						<% else %>
						<input type="text" id="hash1" readonly="true" class="songhashtag" size="10"/>
						<% end %>
					</td>
					<td id="vote_1"><%= @redis.hget "votes", "counter1" %></td>
				</tr>
				<tr>
					<td><% if @redis.get("demarrer") == "off" %>
						<input type="text" id="hash2" class="songhashtag" size="10"/>
						<% else %>
						<input type="text" id="hash2" readonly="true" class="songhashtag" size="10"/>
						<% end %>
					</td>
					<td id="vote_2"><%= @redis.hget "votes", "counter2" %></td>
				</tr>
				<tr>
					<td><% if @redis.get("demarrer") == "off" %>
						<input type="text" id="hash3" class="songhashtag" size="10"/>
						<% else %>
						<input type="text" id="hash3" class="songhashtag" readonly="true" size="10"/>
						<% end %>
					</td>
					<td id="vote_3"><%= @redis.hget "votes", "counter3" %></td>
				</tr>
			</table>
		</div>
		<div class="panel-body">
			<button id="stop_and_go_votes" class="inline_button btn <%= @redis.get("demarrer") == "off" ? "btn-success" : "btn-danger" %>"> <%= @redis.get("demarrer") == "off" ? "Démarrer" : "Arreter" %> </button>
			<button id="remise_a_zero" class=" btn btn-danger" > remettre à zéro </button>
		</div>
	</div>
</div>


